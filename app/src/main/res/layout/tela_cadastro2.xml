<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusable="true" android:focusableInTouchMode="true"
        android:weightSum="1">

        <Spinner
            android:id="@+id/spinnerEscolaridade"
            android:layout_width="match_parent"
            android:layout_height="43dp" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/profissao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_profissao"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:singleLine="true" />


        </android.support.design.widget.TextInputLayout>



        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/restricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_restricao"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:singleLine="true" />


        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/questao1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textSize="18sp"
            android:text="\n Qual é o seu nível de dificuldade para as seguintes situações:\n"
            android:layout_weight="1.04" />

        <TextView
            android:id="@+id/opcao1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Subidas e Descidas" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/in1"
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Pouca" />

            <RatingBar
                android:id="@+id/ratingBar1"
                style="@style/StarRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView6"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/fi1"
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.00"
                android:textSize="18sp"
                android:text="Muita" />
        </LinearLayout>


        <TextView
            android:id="@+id/opcao2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Calçadas com Barreiras" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/in2"
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Pouca" />

            <RatingBar
                android:id="@+id/ratingBar2"
                style="@style/StarRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView6"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/fi2"
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.00"
                android:textSize="18sp"
                android:text="Muita" />
        </LinearLayout>

        <TextView
            android:id="@+id/opcao3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Falta de Rebaixamentos"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/in3"
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:text="Pouca"
                android:textSize="18sp"/>

            <RatingBar
                android:id="@+id/ratingBar3"
                style="@style/StarRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView6"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/fi3"
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.00"
                android:text="Muita"
                android:textSize="18sp"/>
        </LinearLayout>



        <Button
                android:id="@+id/email_sign_in_button"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"

                android:text="Enviar"
                android:textStyle="bold"
                app:backgroundTint="@color/cblue"
                android:onClick="enviar"/>


    </LinearLayout>
</ScrollView>